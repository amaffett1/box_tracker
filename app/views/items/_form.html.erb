# encoding: utf-8

<%= form_with(model: [@box, @item], local: true, html: { multipart: true }) do |form| %>
  <% if @item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@item.errors.count, "errore") %>:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code, "Codice" %><br>
    <%= form.text_field :code %>
  </div>

  <div>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Descrizione" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :category, "Categoria" %><br>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :quantity, "Quantità" %><br>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :position, "Posizione" %><br>
    <%= form.text_field :position %>
  </div>

  <div>
    <%= form.label :notes, "Note" %><br>
    <%= form.text_area :notes %>
  </div>

  <!-- ✅ Sezione immagini corretta -->
  <% if @item.persisted? %>
    <div>
      <%= form.label :images, "Aggiungi immagini" %><br>
      <%= form.file_field :images, multiple: true %>
    </div>
  <% else %>
    <p style="color: #666;">Le immagini possono essere caricate dopo il salvataggio dell’oggetto.</p>
  <% end %>

  <div style="margin-top: 1em;">
    <%= form.submit %>
  </div>
<% end %>
