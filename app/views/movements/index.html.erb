<p style="color: green"><%= notice %></p>
<h1>Movimenti</h1>

<h2>Andamento nel tempo</h2>
<%= line_chart @series, height: "300px" %>

<hr>

<table border="1" cellpadding="5" style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr>
      <th>Quando</th>
      <th>Azione</th>
      <th>Oggetto</th>
      <th>Da</th>
      <th>A</th>
      <th>Utente</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
    <% @movements.each do |m| %>
      <tr>
        <td><%= m.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= m.action.capitalize %></td>
        <td>
  <% if m.item.present? && m.item.box.present? %>
    <%= link_to m.item.name, box_item_path(m.item.box, m.item) %>
  <% else %>
    <em>Oggetto o box eliminato</em>
  <% end %>
</td>

        <td><%= m.from_box&.name || "—" %></td>
        <td><%= m.to_box&.name || "—" %></td>
        <td><%= m.user&.email || "—" %></td>
        <td><%= m.notes.presence || "—" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
